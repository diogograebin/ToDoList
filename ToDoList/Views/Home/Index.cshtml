@model IEnumerable<ToDoList.Models.Tarefa>

@{
    ViewData["Title"] = "Lista de Tarefas";
}

<h1>Lista de Tarefas</h1>

<!-- Formulário de criação -->
<form asp-action="Create" method="post" class="mb-4">
    <div class="form-group">
        <label for="Titulo">Título</label>
        <input type="text" name="Titulo" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <textarea name="Descricao" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-2">Criar Tarefa</button>
</form>

<!-- Lista de tarefas -->
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Concluída?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model)
            {
                <tr>
                    <td>@tarefa.Titulo</td>
                    <td>@tarefa.Descricao</td>
                    <td>@(tarefa.Concluida ? "Sim" : "Não")</td>
                    <td>
                        <!-- Form de edição -->
                        <form asp-action="Edit" method="post" style="display:inline-block">
                            <input type="hidden" name="id" value="@tarefa.TarefaID" />
                            <input type="text" name="titulo" value="@tarefa.Titulo" required />
                            <input type="text" name="descricao" value="@tarefa.Descricao" />
                            <input type="checkbox" name="concluida" @(tarefa.Concluida ? "checked" : "") />
                            <button type="submit" class="btn btn-warning btn-sm">Salvar</button>
                        </form>

                        <!-- Form de exclusão -->
                        <form asp-action="Delete" method="post" style="display:inline-block">
                            <input type="hidden" name="id" value="@tarefa.TarefaID" />
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhuma tarefa cadastrada.</p>
}
